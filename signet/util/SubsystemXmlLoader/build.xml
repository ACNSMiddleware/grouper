<?xml version="1.0"?>
<project
	name="Signet Subsystem Loader"
	default="build" basedir=".">
	
	<property name="dist_util.dir"  value="${toplevel.dir}/util" />

	<property name="util.name"      value="SubsystemXmlLoader" />
	
	<!-- =================== BUILD: Create Directories ===================== --> 
	<target name="prepare">
		<mkdir dir="${dist_util.dir}" /> 
		<mkdir dir="${dist_util.dir}/${util.name}" /> 
	</target>

	<!-- ================== BUILD: Clean Directory ========================= --> 
	<target name="clean">
		<delete dir="${dist_util.dir}/${util.name}" />
	</target>

	<!-- ======================= BUILD: Build  =========================== -->
	<target name="build" depends="clean, prepare"
		description="Build Subsystem Loader Utility">
		<copy file="run.sh"
			todir="${dist_util.dir}/${util.name}" />
		<copy file="run.bat"
			todir="${dist_util.dir}/${util.name}" />

	</target>

</project>
