   <!-- ++++++++++++ Define Limits ++++++++++++ -->

   <Limit>
      <Id>collection</Id>
      <Name>Collection</Name>
      <HelpText>The collection(s) to which this privilege applies.</HelpText>
      <LimitChoiceSet>collection</LimitChoiceSet>
      <Renderer>multipleChoiceCheckboxes.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>acquisition-action</Id>
      <Name>Acquisition tasks</Name>
      <HelpText>Specific acquisition tasks this person can complete.</HelpText>
      <LimitChoiceSet>acquisition-action</LimitChoiceSet>
      <Renderer>multipleChoiceCheckboxes.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>materials-action</Id>
      <Name>Materials processing tasks</Name>
      <HelpText>Specific materials-processing tasks this person can complete.</HelpText>
      <LimitChoiceSet>materials-action</LimitChoiceSet>
      <Renderer>multipleChoiceCheckboxes.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>metadata-action</Id>
      <Name>Metadata tasks</Name>
      <HelpText>Specific metadata tasks this person can complete.</HelpText>
      <LimitChoiceSet>metadata-action</LimitChoiceSet>
      <Renderer>multipleChoiceCheckboxes.jsp</Renderer>
   </Limit>      
   
   <Limit>
      <Id>spending-limit</Id>
      <Name>Spending limit</Name>
      <HelpText>Per-item maximum cost of materials this person can purchase.</HelpText>
      <LimitChoiceSet>max-dollar-amt</LimitChoiceSet>
      <Renderer>singleChoicePullDown.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>subject</Id>
      <Name>Subject area</Name>
      <HelpText>Subject area this person is authorized to work with.</HelpText>
      <LimitChoiceSet>subject</LimitChoiceSet>
      <Renderer>singleChoicePullDown.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>language</Id>
      <Name>Language</Name>
      <HelpText>Language of materials this person is authorized to work with.</HelpText>
      <LimitChoiceSet>language</LimitChoiceSet>
      <Renderer>multipleChoiceCheckboxes.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>fines</Id>
      <Name>Fines handling</Name>
      <HelpText>Fines-collection tasks this person is permitted to do.</HelpText>
      <LimitChoiceSet>fines</LimitChoiceSet>
      <Renderer>singleChoicePullDown.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>access</Id>
      <Name>Access to patron records</Name>
      <HelpText>Level of access to, and ability to change, patron records.</HelpText>
      <LimitChoiceSet>access</LimitChoiceSet>
      <Renderer>singleChoicePullDown.jsp</Renderer>
   </Limit>   

   <!-- ++++++++++++ Define Permissions ++++++++++++ -->
   
   <Permission>
      <Id>recommend</Id>
      <PermissionLimit>subject</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>purchase</Id>
      <PermissionLimit>collection</PermissionLimit>
      <PermissionLimit>spending-limit</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>receive</Id>
      <PermissionLimit>acquisition-action</PermissionLimit>
      <PermissionLimit>collection</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>catalog</Id>
      <PermissionLimit>collection</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>classify</Id>
      <PermissionLimit>collection</PermissionLimit>
      <PermissionLimit>subject</PermissionLimit>
      <PermissionLimit>language</PermissionLimit>  
   </Permission>

   <Permission>
      <Id>metadata</Id>
      <PermissionLimit>metadata-action</PermissionLimit>  
      <PermissionLimit>collection</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>materials</Id>
      <PermissionLimit>materials-action</PermissionLimit>  
      <PermissionLimit>collection</PermissionLimit> 
   </Permission>
   
   <Permission>
      <Id>patron</Id>
      <PermissionLimit>access</PermissionLimit>  
      <PermissionLimit>fines</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>reserves</Id>
      <PermissionLimit>collection</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>checkinout</Id>
      <PermissionLimit>fines</PermissionLimit>
   </Permission>
    
   <Permission>
      <Id>checkin</Id>
      <PermissionLimit>fines</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>holdings</Id>
      <PermissionLimit>materials-action</PermissionLimit>  
   </Permission>
   
   <Permission>
      <Id>changes</Id>
      <PermissionLimit>metadata-action</PermissionLimit>  
   </Permission>         
   
   <Permission>
      <Id>fines</Id>
      <PermissionLimit>fines</PermissionLimit>  
   </Permission>         



   <!-- ++++++++++++ Define Categories ++++++++++++ -->
   
   <Category>
      <Id>acquis</Id>
      <Name>Acquisitions Privileges</Name>
   </Category>
   <Category>
      <Id>cataloging</Id>
      <Name>Cataloging and Metadata Privileges</Name>
   </Category>
   <Category>
      <Id>circ</Id>
      <Name>Circulation Privileges</Name>
   </Category>      
   <Category>
      <Id>serials</Id>
      <Name>Serials and Government Documents Privileges</Name>
   </Category>

   <!-- ++++++++++++ Define Subsystem ++++++++++++ -->

   <Function>
      <Id>recommend</Id>
      <Name>Recommendations</Name>
      <HelpText>Recommend items for acquisition within a collection.</HelpText>
      <CategoryID>acquis</CategoryID>
      <FunctionPermission>recommend</FunctionPermission>
   </Function>
   <Function>
      <Id>purchase</Id>
      <Name>Purchasing</Name>
      <HelpText>Purchase materials for a collection.</HelpText>
      <CategoryID>acquis</CategoryID>
      <FunctionPermission>purchase</FunctionPermission>
   </Function>
   <Function>
      <Id>receive</Id>
      <Name>Receiving</Name>
      <HelpText>Receive materials within a collection, add them to the catalog, and route them to the appropriate processor.</HelpText>
      <CategoryID>acquis</CategoryID>
      <FunctionPermission>receive</FunctionPermission>
   </Function>
   
   <Function>
      <Id>catalog</Id>
      <Name>Cataloging</Name>
      <HelpText>Fully catalog materials within a collection.</HelpText>
      <CategoryID>cataloging</CategoryID>
      <FunctionPermission>catalog</FunctionPermission>
   </Function>
   <Function>
      <Id>classify</Id>
      <Name>Classification</Name>
      <HelpText>Add classification numbers for materials within a subject area and language.</HelpText>
      <CategoryID>cataloging</CategoryID>
      <FunctionPermission>classify</FunctionPermission>
   </Function>
   <Function>
      <Id>metadata</Id>
      <Name>Metadata management</Name>
      <HelpText>Maintain metadata for library holdings, including subject headings and classifications.</HelpText>
      <CategoryID>cataloging</CategoryID>
      <FunctionPermission>metadata</FunctionPermission>
   </Function>
   <Function>
      <Id>materials</Id>
      <Name>Physical materials management</Name>
      <HelpText>Inventory materials, and add and remove copies or volumes.</HelpText>
      <CategoryID>cataloging</CategoryID>
      <FunctionPermission>materials</FunctionPermission>
   </Function>  
   
   <Function>
      <Id>patron</Id>
      <Name>Patron records</Name>
      <HelpText>Add and maintain patron information and privileges.</HelpText>
      <CategoryID>circ</CategoryID>
      <FunctionPermission>patron</FunctionPermission>
   </Function>    
      <Function>
      <Id>reserves</Id>
      <Name>Reserves management</Name>
      <HelpText>Add and remove items in the reserve collection; set reserve restrictions.</HelpText>
      <CategoryID>circ</CategoryID>
      <FunctionPermission>reserves</FunctionPermission>
   </Function>      
      <Function>
      <Id>checkinout</Id>
      <Name>Checkout/checkin</Name>
      <HelpText>Check items out to patrons. Check in returned items.</HelpText>
      <CategoryID>circ</CategoryID>
      <FunctionPermission>checkinout</FunctionPermission>
   </Function>   
      <Function>
      <Id>fines</Id>
      <Name>Fines management</Name>
      <HelpText>Collect, adjust, or forgive fines for circulation, damage, loss.</HelpText>
      <CategoryID>circ</CategoryID>
      <FunctionPermission>fines</FunctionPermission>
   </Function>    
   
   <Function>
      <Id>checkin</Id>
      <Name>Checkin and claims</Name>
      <HelpText>Check in received serials and claim missing issues.</HelpText>
      <CategoryID>serials</CategoryID>
      <FunctionPermission>checkin</FunctionPermission>
   </Function>     
   <Function>
      <Id>holdings</Id>
      <Name>Holdings maintenance</Name>
      <HelpText>Inventory holdings; discard or bind past issues according to retention policy.</HelpText>
      <CategoryID>serials</CategoryID>
      <FunctionPermission>holdings</FunctionPermission>
   </Function>    
   <Function>
      <Id>changes</Id>
      <Name>Metadata management</Name>
      <HelpText>Manage title changes, frequency changes, ceases/resumes.</HelpText>
      <CategoryID>serials</CategoryID>
      <FunctionPermission>changes</FunctionPermission>
   </Function>          

   <!-- ++++++++++++ Define Proxies ++++++++++++ -->
   
   <Proxy>
   </Proxy>
   
   </Subsystem>  
