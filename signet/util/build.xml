<?xml version="1.0"?>
<project
	name="Signet Utilities"
	default="build" basedir=".">

	<property name="dist_util.dir"  value="${toplevel.dir}/util" />
	
	<!-- =================== BUILD: Create Directories ===================== --> 
	<target name="prepare">
		<mkdir dir="${dist_util.dir}" /> 
	</target>

	<!-- ================== BUILD: Clean Directory ========================= --> 
	<target name="clean">
		<delete dir="${dist_util.dir}" />
	</target>

	<!-- ======================= BUILD: Build  =========================== -->
	<target name="build" depends="clean, prepare">		
		<ant dir="SubsystemXmlLoader"  target="build" inheritAll="true" />
		<ant dir="SubjectFileLoader"   target="build" inheritAll="true" />
		<ant dir="TreeXmlLoader"       target="build" inheritAll="true" />
		<ant dir="SignetProxy"         target="build" inheritAll="true" />
	</target>

</project>
