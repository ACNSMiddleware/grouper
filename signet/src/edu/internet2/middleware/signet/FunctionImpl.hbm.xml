<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class
		name="edu.internet2.middleware.signet.FunctionImpl"
		table="signet_function">
		
		<meta attribute="class-description">
			@author Andy Cohen
		</meta>

		<composite-id
			name="fullyQualifiedId"
			class="edu.internet2.middleware.signet.FunctionFullyQualifiedId">
			<key-property name="functionId" column="functionID" />
			<key-property name="subsystemId" column="subsystemID" />
		</composite-id>
		
		<timestamp name="modifyDatetime"/>
		
		<many-to-one
			name="category"
			column="categoryID"
			class="edu.internet2.middleware.signet.CategoryImpl"
			not-null="true"
			cascade="save-update"/>
		
		<set
			name="permissions"
			table="signet_function_permission"
			cascade="save-update"
			lazy="false">
			<key>
				 <column name="functionID"/>
				 <column name="subsystemID"/>
			</key>
			<many-to-many
				class="edu.internet2.middleware.signet.PermissionImpl"
				column="permissionID"/>
		</set>
		
		<property name="status" type="edu.internet2.middleware.signet.StatusType" not-null="true">
			<meta attribute="use-in-tostring">true</meta>
		</property>
		<property
			name="name" type="string" not-null="true"/>
		<property
			name="helpText" type="text" not-null="true"/>
			
	</class>
</hibernate-mapping>
