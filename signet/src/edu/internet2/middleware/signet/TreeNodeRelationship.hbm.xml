<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="edu.internet2.middleware.signet.TreeNodeRelationship"
		table="signet_treeNodeRelationship">
		
		<composite-id>
			
			<key-property
				name="treeId"
				type="string">
				<column name="treeID"></column>
			</key-property>
			
			<key-property
				name="childNodeId"
				type="string">
				<column name="nodeID"></column>
			</key-property>

			<key-property
				name="parentNodeId"
				type="string">
				<column name="parentNodeID"></column>
			</key-property> 

		</composite-id>
		
