<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class
		name="edu.internet2.middleware.signet.SubjectAttribute"
		table="SubjectAttribute">
		
		<id name="id" type="int" column="attributeID">
			<generator class="native"/>
		</id>
		
		<timestamp name="modifyDatetime"/>
		<property name="subjectId" type="string" column="subjectID" />
		<many-to-one name="subjectType" column="subjectTypeID" cascade="save-update" class="edu.internet2.middleware.signet.SubjectTypeImpl" not-null="true"/>

<!--
		<map name="attributeLists" table="SubjectAttribute">
			<key  column="subjectID" ></key> 
			<index column="subjectID" type="string">	</index>
			<element     type="string"></element>
			<element type="string"></element>
		</map>
-->
		
		<property
			name="name" type="string" not-null="true"/>
		<property
			name="instance" type="integer" not-null="true"/>
		<property
			name="value" type="string" not-null="false"/>
		<property
			name="searchValue" type="string" not-null="false"/>
	</class>
</hibernate-mapping>
