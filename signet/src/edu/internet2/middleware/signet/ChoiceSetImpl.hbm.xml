<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
		default-lazy="false" >

	<class
		name="edu.internet2.middleware.signet.ChoiceSetImpl"
		table="signet_choiceSet">
		
		<id name="key"
				type="int"
				column="choiceSetKey"
				unsaved-value="null" >
			<generator class="sequence">
				<param name="sequence">choiceSetSerial</param>
			</generator>
		</id>
		<timestamp name="modifyDatetime"/>
		
		<property
			name="id"
			column="choiceSetID"/>

		<property
			name="adapterClassName"
			column="adapterClass"
			not-null="true">
		</property>	
		
		<many-to-one 
			name="subsystem"
			column="subsystemID"
			class="edu.internet2.middleware.signet.SubsystemImpl"
			not-null="true"/>
		
		<set name="choices" inverse="true" cascade="all">
			<key column="choiceSetKey"/>
			<one-to-many
				class="edu.internet2.middleware.signet.ChoiceImpl"/>
		</set>
		
	</class>
</hibernate-mapping>
