		<property name="subjectType"	column="type"		type="string" />
		<property name="name"			column="name"		type="string" />
		<property name="sourceId"		column="sourceid"	type="string" />
        <property name="modifyDatetime"	column="modifyDatetime"	type="date" />
        <property name="synchDatetime"	column="syncDatetime"	type="date" />

		<set name="subjectAttrs"
