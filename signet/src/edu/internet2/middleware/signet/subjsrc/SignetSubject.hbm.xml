<hibernate-mapping
		default-lazy="false" >

	<class
			name="edu.internet2.middleware.signet.subjsrc.SignetSubject"
			table="signet_subject" >

		<id name="subject_PK"
				type="long"
				column="subjectKey"
				unsaved-value="null" > 
			<generator class="native" >
				<param name="sequence">subjectSerial</param>
			</generator>
		</id>
        <timestamp name="modifyDatetime" column="modifyDatetime" />

		<property name="id"				column="subjectID"	type="string" />
		<property name="subjectType"	column="type"		type="string" />
		<property name="name"			column="name"		type="string" />
		<property name="sourceId"		column="sourceID"	type="string" />
        <property name="synchDatetime"	column="syncDatetime"	type="date" />

		<set name="subjectAttrs"
				cascade="all"
				inverse="true" >
			<key column="subjectKey" />
			<one-to-many class="edu.internet2.middleware.signet.subjsrc.SignetSubjectAttr" />
		</set>

