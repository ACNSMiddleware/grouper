<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
		default-lazy="false" >

	<class
		name="edu.internet2.middleware.signet.SubsystemImpl"
		table="signet_subsystem">
		
		<meta attribute="class-description">
			Subsystem describes a business entity within the
			enterprise, such as the financial department.
			@author Andy Cohen
		</meta>
		
		<id name="id"
				type="string"
				column="subsystemID" >
			<generator class="assigned"/>
		</id>
		
		<timestamp name="modifyDatetime"/>
		
		<property
			name="status"
			type="edu.internet2.middleware.signet.StatusType"
			not-null="true">
		</property>
		
		<property name="name" type="string" not-null="true"/>
		
		<property name="helpText" type="text" not-null="true"/>
		
		<set name="categories" inverse="true" cascade="save-update">
			<key column="subsystemID"/>
			<one-to-many class="edu.internet2.middleware.signet.CategoryImpl"/>
		</set>
		
		<set name="functions" inverse="true" cascade="save-update">
			<key column="subsystemID"/>
			<one-to-many class="edu.internet2.middleware.signet.FunctionImpl"/>
		</set>
		
		<set name="choiceSets" inverse="true" cascade="all">
			<key column="subsystemID"/>
			<one-to-many class="edu.internet2.middleware.signet.ChoiceSetImpl"/>
		</set>

		<many-to-one
			name="tree"
			column="scopeTreeID"
			cascade="save-update"
			class="edu.internet2.middleware.signet.TreeImpl"
			not-null="false"/>

	</class>
</hibernate-mapping>
