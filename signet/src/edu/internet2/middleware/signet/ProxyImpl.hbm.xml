<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class
		name="edu.internet2.middleware.signet.ProxyImpl"
		table="signet_proxy"
		lazy="true">
		
<!--
		NOTE: The following ID declaration must be used on HSQL.
-->
		<id name="id" type="int" column="proxyID">
			<generator class="native"/>
		</id>

<!-- 
		NOTE: The following ID declaration, while correct,
		fails on HSQL, which has no "numeric" datatype.
		
		FURTHER NOTE: TEST THIS SOMEHOW ON SYBASE, AND SEE IF THERE'S
		SOME WAY TO SPECIFY A DECIMAL PRECISION OF (12,0) WITHOUT
		FORCING THE DATATYPE TO NUMERIC, WHICH NOT EVERY DB SUPPORTS.
		<id name="numericId" type="big_decimal" unsaved-value="null"> 
       		<column name="assignmentID" sql-type="numeric(12,0)"/> 
       		<generator class="native"/> 
    	</id>
-->
    	
<!--		
		<timestamp name="modifyDatetime"/>
-->
        <property
			name="modifyDatetime" column="modifyDatetime" />
		
		<set
			name="history"
			inverse="true"
			lazy="true"
			table="signet_proxy_history"
			cascade="save-update">
			
			<key column="proxyID"/>
			<one-to-many
				class="edu.internet2.middleware.signet.ProxyHistoryImpl"/>
		</set>

		<many-to-one
			name="grantor"
			class="edu.internet2.middleware.signet.PrivilegedSubjectImpl"
			column="grantorKey"
			not-null="true"/>

		<many-to-one
			name="grantee"
			class="edu.internet2.middleware.signet.PrivilegedSubjectImpl"
			column="granteeKey"
			not-null="true"/>

		<many-to-one
			name="revoker"
			class="edu.internet2.middleware.signet.PrivilegedSubjectImpl"
			column="revokerKey"
			not-null="false"/>

		<many-to-one
			name="proxy"
			class="edu.internet2.middleware.signet.PrivilegedSubjectImpl"
			column="proxySubjectKey"
			not-null="false"/>
		
		<many-to-one
			name="subsystem"
			class="edu.internet2.middleware.signet.SubsystemImpl"
			cascade="save-update"
			not-null="false">
			
			<column name="subsystemID"/>
		</many-to-one>
		
		<property
			name="status"
			type="edu.internet2.middleware.signet.StatusType"
			not-null="true"/>
		<property
			name="canUse"
			type="boolean"
			not-null="true"/>
		<property
			name="canExtend"
			type="boolean"
			not-null="true"/>
		<property
			name="effectiveDate"
			type="timestamp"
			not-null="true"/>
		<property
			name="expirationDate"
			type="timestamp"
			not-null="false"/>
		<property
			name="instanceNumber"
			not-null="true"/>

	</class>
</hibernate-mapping>
