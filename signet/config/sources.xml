               SELECT DISTINCT 
                      sub.subjectTypeID,
                      sub.subjectID,
                      sub.name,
                      des.value AS description
               FROM   Subject sub,
                      SubjectAttribute att,
                      SubjectAttribute des
               WHERE  sub.subjectTypeID = 'group'
               AND    sub.subjectID = des.subjectID
               AND    des.name = 'description'
               AND    sub.subjectID = att.subjectID
               AND   ((att.name = 'name' AND
                          lower(att.value) like lower('%TERM%%')) OR
                      (att.name = 'all' AND
                          lower(att.value) = lower('%TERM%')) OR
                      (lower(sub.subjectID) like lower('%TERM%%'))
                     )
            </param-value>
        </param>
    </search>

  </source>

