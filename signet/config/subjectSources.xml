<!--
	Signet Subject Source Mapping File

	The elements in this file map the elements in the Subject API to the
	Signet PrivilegedSubject interface.
-->

<signetSubjectSources>

	<signetSubjectSource id="signet.people" name="My Person" status="active" failover="true" >

		<subjectType signet="person"	source="people" />
		<subjectType signet="person"	source="human" />
		<subjectType signet="group"		source="workgroup" />

		<usage>login, search</usage>
		<usage>foobar</usage>

		<mappedAttribute app="subjectName"		source="displayName" />
		<mappedAttribute app="subjectSortName"	source="displayNameLastFirst" />
     
		<mappedAttribute app="subjectDisplayDescription" source="kitnDescription" />
		<mappedAttribute app="subjectDisplayID"	source="netid" />

		<mappedAttribute app="subjectAuthId"	source="principal" />

		<outputXml>netid</outputXml>
		<outputXml>studentid, employeeid</outputXml>
		<outputXml>studentid</outputXml>

	</signetSubjectSource>

	<signetSubjectSource id="signet.groups" name="My Group">
     
		<subjectType signet="group" source="workgroup" />

		<usage>search</usage>

		<mappedAttribute app="subjectName" source="displayName" />
		<mappedAttribute app="subjectSortName" source="displayNameFirstLast" />
     
		<mappedAttribute app="subjectDisplayDescription" source="kitnDescription" />
		<mappedAttribute app="subjectDisplayID" source="netid" />

		<mappedAttribute app="subjectAuthId" source="principal" />

		<outputXml>netid, studentid"</outputXml>
		<outputXml>studentid</outputXml>
		<outputXml>employeeid</outputXml>

	</signetSubjectSource>

</signetSubjectSources>
