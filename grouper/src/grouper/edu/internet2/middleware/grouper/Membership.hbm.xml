<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: Membership.hbm.xml,v 1.1.2.2 2005-10-17 14:53:02 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Membership" table="grouper_memberships">

    <meta attribute="class-description">
A list membership in the Groups Registry.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateUtil.getSession();</meta>

    <!-- id -->
    <id name="id" type="string">
      <meta attribute="use-in-tostring">false</meta>
      <column name="id" sql-type="char(32)"/>
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->
    <!-- version -->
    <version name="version"/>
    <!-- version -->


    <!-- group_id -->
    <many-to-one
      name="group_id"
      class="edu.internet2.middleware.grouper.Group" 
    >
      <meta attribute="field-description">
Get group.
      </meta>
      <meta attribute="finder-method">findByGroupId</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
      <column name="group_id" sql-type="char(32)"/>
    </many-to-one>
    <!-- group_id -->

    <!-- member_id -->
    <many-to-one
      name="member_id"
      class="edu.internet2.middleware.grouper.Member" 
    >
      <meta attribute="field-description">
Get member.
      </meta>
      <meta attribute="finder-method">findByMemberId</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
      <column name="member_id" sql-type="char(32)"/>
    </many-to-one>
    <!-- member_id -->

    <!-- list_id -->
    <many-to-one
      name="list_id"
      class="edu.internet2.middleware.grouper.Field" 
    >
      <meta attribute="field-description">
Get list.
      </meta>
      <meta attribute="finder-method">findByListId</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
      <column name="list_id" sql-type="char(32)"/>
    </many-to-one>
    <!-- list_id -->

    <!-- via_id -->
    <many-to-one
      name="via_id"
      class="edu.internet2.middleware.grouper.Group" 
    >
      <meta attribute="field-description">
Get via group.
      </meta>
      <meta attribute="finder-method">findByViaId</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
      <column name="via_id" sql-type="char(32)"/>
    </many-to-one>
    <!-- via_id -->

    <!-- count -->
    <property
      name="count"
      type="integer"
      not-null="true"
    >
      <meta attribute="field-description">
Get membership hop count.
      </meta>
      <meta attribute="finder-method">findByCnt</meta>
      <meta attribute="scope-get">public</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
    </property>
    <!-- count -->

  </class>
</hibernate-mapping>

