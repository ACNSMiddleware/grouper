<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: Field.hbm.xml,v 1.1.2.3 2005-10-18 15:31:43 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Field" table="grouper_fields">

    <meta attribute="class-description">
Schema specification for a Group attribute or list.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateUtil.getSession();</meta>

    <!-- id -->
    <id name="id" type="string">
      <meta attribute="use-in-tostring">false</meta>
      <column name="id" sql-type="char(32)"/>
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->
    <!-- version -->
    <version name="version"/>
    <!-- version -->


    <!-- type_id -->
    <many-to-one
      name="type_id"
      class="edu.internet2.middleware.grouper.Type" 
    >
      <meta attribute="finder-method">findByTypeId</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
      <column name="type_id" sql-type="char(32)"/>
    </many-to-one>
    <!-- type_id -->

    <!-- name -->
    <property 
      name="name"
      type="string"
      length="255"
      not-null="true"
    >
      <meta attribute="field-description">
Get field name.
      </meta>
      <meta attribute="finder-method">findByName</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
    </property>
    <!-- name -->

    <!-- read_privilege_id -->
    <many-to-one
      name="read_privilege_id"
      class="edu.internet2.middleware.grouper.Privilege" 
    >
      <meta attribute="field-description">
Get read privilege.
      </meta>
      <meta attribute="finder-method">findByReadPrivilege</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
      <column name="read_privilege_id" sql-type="char(32)"/>
    </many-to-one>
    <!-- read_privilege_id -->

    <!-- write_privilege_id -->
    <many-to-one
      name="write_privilege_id"
      class="edu.internet2.middleware.grouper.Privilege" 
    >
      <meta attribute="field-description">
Get write privilege.
      </meta>
      <meta attribute="finder-method">findByWritePrivilege</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
      <column name="write_privilege_id" sql-type="char(32)"/>
    </many-to-one>
    <!-- write_privilege_id -->

    <!-- is_list -->
    <property 
      name="is_list"
      type="boolean"
      not-null="true"
    >
      <meta attribute="field-description">
Get whether field is a list.
      </meta>
      <meta attribute="finder-method">findByIsList</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
    </property>
    <!-- name -->

  </class>
</hibernate-mapping>

