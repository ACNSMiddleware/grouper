<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC 
          "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
          "http://java.sun.com/dtd/web-app_2_3.dtd ">
<web-app>
    <filter>
  	<filter-name>EasyLogin Filter</filter-name>
  	<filter-class>edu.internet2.middleware.grouper.ui.EasyLoginFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>Login check</filter-name>
  	<filter-class>edu.internet2.middleware.grouper.ui.LoginCheckFilter</filter-class>
  	<init-param>    
  		<param-name>failureUrl</param-name>    
  		<param-value>/</param-value>  
  	</init-param>
	 	<init-param>    
  	<param-name>ignore</param-name>    
  		<param-value>:/populateIndex.do:/callLogin.do:/easyLogin.do:</param-value>  
  	</init-param>
  </filter>

 <!--ensure that Basic HTTP authentication used for standard UI-->
   <security-constraint>
    <web-resource-collection>
      <web-resource-name>Tomcat login i2mi</web-resource-name>
      <url-pattern>/i2mi/login.do</url-pattern>
    </web-resource-collection>
    <auth-constraint>
       <!-- NOTE:  This role is not present in the default users file -->
       <role-name>grouper_user</role-name>
    </auth-constraint>
  </security-constraint>
  </web-app>