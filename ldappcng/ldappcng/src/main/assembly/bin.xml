<!-- Binary distribution, along with dependency jar files -->
<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <excludes>
                <exclude>edu.internet2.middleware.grouper:grouper</exclude>
                <exclude>edu.internet2.middleware.grouper:morphString</exclude>
                <exclude>edu.internet2.middleware.subject:subject</exclude>
                <exclude>org.apache.xerces:*</exclude>
                <exclude>org.apache.xalan:*</exclude>
                <exclude>org.apache.ant:*</exclude>
                <exclude>ant-contrib:*</exclude>
            </excludes>
            <includes>
                <include>*:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- Copy conf directory -->
        <fileSet>
            <directory>conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <includes>
                <include>*.example.*</include>
            </includes>
        </fileSet>

        <!-- Documentation -->
        <fileSet>
            <directory>doc/</directory>
            <outputDirectory>/doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/site/apidocs</directory>
            <outputDirectory>/doc/api</outputDirectory>
        </fileSet>
    </fileSets>
    
</assembly>