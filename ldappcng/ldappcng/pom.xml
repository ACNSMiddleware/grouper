                        <version>2.5</version>
                        <configuration>
                            <includes>
                                <include>**/ldappc/spml/**/*Test.java</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>EmbeddedApacheDS</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <testUseEmbeddedLdap>true</testUseEmbeddedLdap>
                <testUseActiveDirectory>false</testUseActiveDirectory>
                <base>dc=testgrouper,dc=edu</base>
                <groupObjectClass>groupOfNames</groupObjectClass>
                <edu.vt.middleware.ldap.ldapUrl>ldap://127.0.0.1:10388</edu.vt.middleware.ldap.ldapUrl>
                <edu.vt.middleware.ldap.base>dc=testgrouper,dc=edu</edu.vt.middleware.ldap.base>
                <edu.vt.middleware.ldap.authtype>simple</edu.vt.middleware.ldap.authtype>
                <edu.vt.middleware.ldap.serviceUser>uid=admin,ou=system</edu.vt.middleware.ldap.serviceUser>
                <edu.vt.middleware.ldap.serviceCredential>secret</edu.vt.middleware.ldap.serviceCredential>
                <edu.vt.middleware.ldap.ssl>false</edu.vt.middleware.ldap.ssl>
                <edu.vt.middleware.ldap.tls>false</edu.vt.middleware.ldap.tls>
                <!-- for ldappc -->
                <edu.vt.middleware.ldap.pagedResultsSize>0</edu.vt.middleware.ldap.pagedResultsSize>
