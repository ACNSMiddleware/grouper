<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Subsystem SYSTEM "http://www.stanford.edu/~lmcrae/signet/Subsystem.dtd">
<Subsystem>
   <Id>projectx</Id>
   <Name>Bio-Sciences Project X</Name>
   <HelpText>This is a sample subsystem for Signet</HelpText>
   
   <!-- ++++++++++++ Declare scope ++++++++++++ -->

   <Scope>admin_orgs</Scope>

   <!-- ++++++++++++ Define ChoiceSets ++++++++++++ -->

   <ChoiceSet>
      <Id>labs</Id>
      <Choice>
         <Value>higgins</Value>
         <Label>Higgins Laboratory</Label>
         <Order>1</Order>
         <Rank>1</Rank>
      </Choice>
      <Choice>
         <Value>nyman</Value>
         <Label>Nyman Resarch Center</Label>
         <Order>2</Order>
         <Rank>2</Rank>
      </Choice>
      <Choice>
         <Value>warner</Value>
         <Label>Warner Labratory</Label>
         <Order>3</Order>
         <Rank>3</Rank>
      </Choice>
   </ChoiceSet>
   
   <ChoiceSet>
      <Id>actions</Id>
      <Choice>
         <Value>originate</Value>
         <Label>Originate purchase orders</Label>
         <Order>1</Order>
         <Rank>1</Rank>
      </Choice>
      <Choice>
         <Value>approve</Value>
         <Label>Approve purchases</Label>
         <Order>2</Order>
         <Rank>2</Rank>
       </Choice>
   </ChoiceSet>
   
   <ChoiceSet>
      <Id>spending-limit</Id>
      <Choice>
         <Value>100</Value>
         <Label>$100</Label>
         <Order>1</Order>
         <Rank>1</Rank>
      </Choice>
      <Choice>
         <Value>1000</Value>
         <Label>$1000</Label>
         <Order>2</Order>
         <Rank>2</Rank>
      </Choice>
      <Choice>
         <Value>10000</Value>
         <Label>$10,000</Label>
         <Order>3</Order>
         <Rank>3</Rank>
      </Choice>
      <Choice>
         <Value>100000</Value>
         <Label>$100,000</Label>
         <Order>4</Order>
         <Rank>4</Rank>
      </Choice>
      <Choice>
         <Value>0</Value>
         <Label>No limit</Label>
         <Order>5</Order>
         <Rank>5</Rank>
      </Choice>
   </ChoiceSet>
   
   <ChoiceSet>
      <Id>access-levels</Id>
      <Choice>
         <Value>view</Value>
         <Label>Read in place</Label>
         <Order>1</Order>
         <Rank>1</Rank>
      </Choice>
      <Choice>
         <Value>transfer</Value>
         <Label>Read, with transfer/copy access</Label>
         <Order>2</Order>
         <Rank>2</Rank>
      </Choice>
      <Choice>
         <Value>update</Value>
         <Label>Update data columns</Label>
         <Order>3</Order>
         <Rank>3</Rank>
      </Choice>
      <Choice>
         <Value>admin</Value>
         <Label>Create/remove research files</Label>
         <Order>4</Order>
         <Rank>4</Rank>
      </Choice>
   </ChoiceSet>

   <!-- ++++++++++++ Define Limits ++++++++++++ -->

   <Limit>
      <Id>which-lab</Id>
      <Name>Laboratories</Name>
      <HelpText>Laboratory(ies) in or for which this privilege can be used.</HelpText>
      <LimitChoiceSet>labs</LimitChoiceSet>
      <Renderer>multipleChoiceCheckboxes.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>requisitions</Id>
      <Name>Action</Name>
      <HelpText>Authorization level for online purchase requisitions.</HelpText>
      <LimitChoiceSet>actions</LimitChoiceSet>
      <Renderer>singleChoicePullDown.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>spending-limit</Id>
      <Name>Spending limit</Name>
      <HelpText>Financial spending and/or approval limit.</HelpText>
      <LimitChoiceSet>spending-limit</LimitChoiceSet>
      <Renderer>singleChoicePullDown.jsp</Renderer>
   </Limit>
   
   <Limit>
      <Id>data-access-level</Id>
      <Name>Level of access</Name>
      <HelpText>Document access level for this person. Each level includes the level(s) above it in the list.</HelpText>
      <LimitChoiceSet>access-levels</LimitChoiceSet>
      <Renderer>singleChoicePullDown.jsp</Renderer>
   </Limit>

   <!-- ++++++++++++ Define Permissions ++++++++++++ -->
   
   <Permission>
      <Id>allocate-space</Id>
      <PermissionLimit>which-lab</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>lab-access</Id>
      <PermissionLimit>which-lab</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>cabinet-access</Id>
      <PermissionLimit>which-lab</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>data-access</Id>
      <PermissionLimit>data-access-level</PermissionLimit>
   </Permission>
   
   <Permission>
      <Id>approve-requisitions</Id>
      <PermissionLimit>requisitions</PermissionLimit>
      <PermissionLimit>spending-limit</PermissionLimit>
      <PermissionPrerequisite>spending-limit</PermissionPrerequisite>
   </Permission>

   <!-- ++++++++++++ Define Categories ++++++++++++ -->
   
   <Category>
      <Id>manage</Id>
      <Name>Lab Management Privileges</Name>
   </Category>
   <Category>
      <Id>use</Id>
      <Name>Lab Usage Privileges</Name>
   </Category>

   <!-- ++++++++++++ Define Subsystem ++++++++++++ -->

   <Function>
      <Id>allocate-space</Id>
      <Name>Allocate floor space</Name>
      <HelpText>Manage the floor space of a lab, including project assignments, scheduling, and required building services (e.g., water, gas, network outlets, etc.).</HelpText>
      <CategoryID>manage</CategoryID>
      <FunctionPermission>allocate-space</FunctionPermission>
   </Function>
   <Function>
      <Id>purchase-equipment</Id>
      <Name>Purchase equipment</Name>
      <HelpText>Purchase laboratory equipment, including capital equipment.</HelpText>
      <CategoryID>manage</CategoryID>
      <FunctionPermission>approve-requisitions</FunctionPermission>
   </Function>
   <Function>
      <Id>purchase-supplies</Id>
      <Name>Purchase supplies</Name>
      <HelpText>Purchase laboratory supplies, including medical supplies, but excluding drugs.</HelpText>
      <CategoryID>manage</CategoryID>
      <FunctionPermission>approve-requisitions</FunctionPermission>
   </Function>
   
   <Function>
      <Id>card-access</Id>
      <Name>Lab access via Mag Card</Name>
      <HelpText>Enter the selected lab(s) by swiping Mag Card.</HelpText>
      <CategoryID>use</CategoryID>
      <FunctionPermission>lab-access</FunctionPermission>
   </Function>
   <Function>
      <Id>drug-checkout</Id>
      <Name>Drug cabinet access</Name>
      <HelpText>Access the drug protocols, either for inventory/review, or for lab checkout use.</HelpText>
      <CategoryID>use</CategoryID>
      <FunctionPermission>cabinet-access</FunctionPermission>
   </Function>
   <Function>
      <Id>data-access</Id>
      <Name>Research data access</Name>
      <HelpText>Access laboratory reports and experimental data.</HelpText>
      <CategoryID>use</CategoryID>
      <FunctionPermission>data-access</FunctionPermission>
   </Function>

   <!-- ++++++++++++ Define Proxies ++++++++++++ -->
   
   <Proxy>
   </Proxy>
   
   </Subsystem>  
