<!-- Binary distribution, along with dependency jar files, and site -->
<assembly>
  <id>bin</id>

  <!-- Generate both tar.gz and zip format distributions -->
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <!-- Include the dependent jars, including the project jar -->
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <includes>
        <include>*:jar:*</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <!-- Copy README and LICENSE -->
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
      </includes>
    </fileSet>

    <!-- Copy bin directory -->
    <fileSet>
      <directory>bin</directory>
      <outputDirectory>/bin</outputDirectory>
    </fileSet>

    <!-- Copy conf directory -->
    <fileSet>
      <directory>conf</directory>
      <outputDirectory>/conf</outputDirectory>
    </fileSet>

    <!-- Copy logs directory, excluding log files -->
    <fileSet>
      <directory>logs</directory>
      <outputDirectory>/logs</outputDirectory>
      <excludes>
        <exclude>*.log*</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
