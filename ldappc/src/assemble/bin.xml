<!-- Binary distribution, along with dependency jar files -->
<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeSiteDirectory>true</includeSiteDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*:jar:*</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <!-- Copy runner scripts -->
  <files>
    <file>
      <source>src/scripts/ldappc.sh</source>
      <outputDirectory>/bin</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/scripts/ldappc.bat</source>
      <outputDirectory>/bin</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>

  <fileSets>
    <!-- Copy conf directory -->
    <fileSet>
      <directory>conf</directory>
      <outputDirectory>/conf</outputDirectory>
    </fileSet>
    <!-- Copy logs directory -->
    <fileSet>
      <directory>logs</directory>
      <outputDirectory>/logs</outputDirectory>
      <excludes>
        <exclude>*.log*</exclude>
      </excludes>
    </fileSet>

    <!-- Copy README and LICENSE -->
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
