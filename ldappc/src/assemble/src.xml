<!-- Source distribution, along with dependency jar files, and site -->
<assembly>
  <id>src</id>

  <!-- Generate both tar.gz and zip format distributions -->
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <!-- Include the site documentation -->
  <includeSiteDirectory>true</includeSiteDirectory>

  <fileSets>
    <!-- Copy the main directory, excluding generated files and the usual suspects -->
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>cobertura.ser</exclude>
        <exclude>**/logs/*.log*</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
