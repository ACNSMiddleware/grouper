<!-- Source distribution, along with dependency jar files, and site -->
<assembly>
  <id>src</id>

  <!-- Generate both tar.gz and zip format distributions -->
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <dependencySets>
  <!-- Copy the dependent jars, excluding the project jar -->
    <dependencySet>
      <outputDirectory>target/lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>*:jar:*</include>
      </includes>
    </dependencySet>

    <!-- Copy the project jar -->
    <dependencySet>
      <outputDirectory>target</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <includes>
        <include>ldappc:jar:*</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <!-- Generate runner scripts -->
  <files>
    <file>
      <source>src/scripts/ldappc.sh</source>
      <outputDirectory>target/bin</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/scripts/ldappc.bat</source>
      <outputDirectory>target/bin</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>

  <fileSets>
    <!-- Copy the main directory, excluding generated files and the usual suspects -->
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>cobertura.ser</exclude>
        <exclude>**/logs/*.log*</exclude>
      </excludes>
    </fileSet>

    <!-- Include the site directory -->
    <fileSet>
      <directory>target/site</directory>
      <outputDirectory>target/site</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
