<!-- Source distribution -->
<assembly>
  <id>src</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeSiteDirectory>true</includeSiteDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*:jar:*</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <!-- Copy runner scripts -->
  <files>
    <file>
      <source>src/scripts/ldappc.sh</source>
      <outputDirectory>/bin</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/scripts/ldappc.bat</source>
      <outputDirectory>/bin</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>cobertura.ser</exclude>
        <exclude>**/logs/*.log*</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
