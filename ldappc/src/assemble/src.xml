<!-- Source distribution, along with dependency jar files, and site -->
<assembly>
  <id>src</id>
  
  <!-- Generate both tar.gz and zip format distributions -->
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <!-- Include the site directory -->
  <includeSiteDirectory>true</includeSiteDirectory>

  <!-- Include the dependent jars, including the project jar -->
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*:jar:*</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <!-- Generate runner scripts -->
  <files>
    <file>
      <source>src/scripts/ldappc.sh</source>
      <outputDirectory>/bin</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/scripts/ldappc.bat</source>
      <outputDirectory>/bin</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>

  <!-- Copy the main directory, excluding generated files and the usual suspects -->
  <fileSets>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>cobertura.ser</exclude>
        <exclude>**/logs/*.log*</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
