<!-- Site documentation distribution -->
<assembly>
  <id>site</id>

  <!-- Generate both tar.gz and zip format distributions -->
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <fileSets>
    <!-- Include the site directory at the main level. It's all this assembly includes -->
    <fileSet>
      <directory>target/site</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
