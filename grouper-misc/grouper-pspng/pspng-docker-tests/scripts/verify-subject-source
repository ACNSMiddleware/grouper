#!/bin/bash

D="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P )"
. "$D/functions.bash"
. "$D/shflags"

DEFINE_string subject "agasper" "Subject to look up, default: agasper"

# parse the command-line
FLAGS "$@" || exit $?
eval set -- "${FLAGS_ARGV}"

set -o errexit
set -o pipefail
set -o nounset

tempfile_into_T
cat >$T <<EOF
gs = GrouperSession.startRootSession();
subject = findSubject("$FLAGS_subject");
EOF

echo Running GSH with:
cat $T
echo ===

ERRORS=$($GSH < $T 2>&1 | grep_ ERROR)

if [ -z "$ERRORS" ]; then
  echo Subject source is working
  exit 0
else
  echo Subject source failure: $ERRORS
  exit 1
fi

 
